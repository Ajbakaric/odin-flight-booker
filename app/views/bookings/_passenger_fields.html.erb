<!-- app/views/bookings/_passenger_fields.html.erb -->

<div class="passenger-fields">
  <%= fields_for :passengers, Passenger.new, child_index: Time.now.to_i do |passenger_form| %>
    <div>
      <%= passenger_form.label :name %>
      <%= passenger_form.text_field :name %>
    </div>
    <div>
      <%= passenger_form.label :email %>
      <%= passenger_form.email_field :email %>
    </div>
    <%= link_to "Remove", "#", class: "remove-passenger-btn" %>
  <% end %>
</div>
